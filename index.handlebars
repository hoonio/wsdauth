<html>
  <head>
    <title>WSD Auth</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">WCD Auth</a>
        </div>
      </div>
    </nav>

    <div id="app" class="container">
      {{#if loggedin}}
        <h1>You are now logged in</h1>
        <div id="user" style="margin-top:50px;">
          {{user}}
        </div>
      {{else}}
        <h1>Welcome! Please sign in!</h1>
        <button onclick="window.location.href='/login'">Authenticate</button>
      {{/if}}
    </div>

    <footer class="footer navbar-default" style="position: absolute; bottom: 0; width: 100%; height: 50px; background-color: #f5f5f5;">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            Â© <script>document.write(new Date().getFullYear());</script> WCD
          </a>
        </div>
      </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/jquery.profile.js"></script>
    {{#if loggedin}}
      <script>
        $(document).ready( function() {
          $('#user').renderProfile();
        });
      </script>
    {{/if}}

  </body>
</html>
